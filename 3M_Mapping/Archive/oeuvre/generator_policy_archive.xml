<!-- sari Generator Policy file v1.0 -->
<!-- Author: Matteo Lorenzini ETH-GTA -->
<generator_policy>
  <!-- Concept entity -->
  <generator name="ConceptURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/{term}</pattern>
  </generator>
  <generator name="ConceptURI_2step" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/{term}/{term1}</pattern>
  </generator>
  <generator name="ConceptURI_3step" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/{term}/{term1}/{term2}</pattern>
  </generator>
  <generator name="ConceptAppellationURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Appellation/{term}</pattern>
  </generator>
  <!-- Places entity -->
  <generator name="PlaceURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Place/{term}</pattern>
  </generator>
  <generator name="PlaceAppellationURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Place/Appellation/{term}</pattern>
  </generator>
  <generator name="PlaceAppellationAddressURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Place/Appellation/{mainaddress}-{postcode}-{country}</pattern>
  </generator>
  <generator name="PlaceAppLatLong" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Place/Appellation/{lat}-{long}</pattern>
  </generator>
  <!-- Person entity -->
  <generator name="PersonURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Person/{term}</pattern>
  </generator>
  <generator name="PersonAppellationURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Person/Appellation/{term}</pattern>
  </generator>
  <!-- Groups entity -->
  <generator name="GroupsURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Groups/{term}</pattern>
  </generator>
  <!-- Actor entity -->
  <generator name="ActorURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Actor/{term}</pattern>
  </generator>
  <generator name="ActorTwoNameMergeURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Actor/{firstName}_{LastName}</pattern>
  </generator>
  <generator name="ActorAppellationURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Actor/Appellation/{term}</pattern>
  </generator>
  <!-- Crator -->
  <generator name="CreatorURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Creator/{term}</pattern>
  </generator>
  <generator name="CreatorAppellationURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Creator/Appellation/{term}</pattern>
  </generator>
  <!-- Participant -->
  <generator name="ParticipantURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Participant/{term}</pattern>
  </generator>
  <generator name="ParticipantAppellationURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Participant/Appellation/{term}</pattern>
  </generator>
  <!-- Event entity -->
  <generator name="EventURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Event/{term}</pattern>
  </generator>
  <generator name="EventAppellationURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Event/Appellation/{term}</pattern>
  </generator>
  <!-- Time Span -->
  <generator name="TimeSpanURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Start_Date/{term}</pattern>
  </generator>
  <generator name="TimeSpanURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/End_Date/{term}</pattern>
  </generator>
  <!-- ID -->
  <generator name="IDURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Id/{term}</pattern>
  </generator>
  <!-- Title -->
  <generator name="TitleURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Title/{term}</pattern>
  </generator>
  <!-- Type -->
  <generator name="TypeURI" prefix="sari" shorten="yes">
    <pattern>fieldDefinition/Type/{term}</pattern>
  </generator>
  <!-- Thing entity -->
  <generator name="ThingURI" prefix="sari" shorten="yes">
    <pattern>Thing/{term}</pattern>
  </generator>
  <generator name="ThingAppellationURI" prefix="sari" shorten="yes">
    <pattern>Thing/Appellation/{term}</pattern>
  </generator>
  <generator name="OneLevelCustomURI" prefix="sari" shorten="yes">
    <pattern>{level1}/{term}</pattern>
  </generator>
  <generator name="TwoLevelCustomURI" prefix="sari" shorten="yes">
    <pattern>{level1}/{level2}/{term}</pattern>
  </generator>
  <generator name="OneLevelCustomURIwCount" prefix="sari" shorten="yes">
    <pattern>{level1}/{count}/{term}</pattern>
  </generator>
  <generator name="TwoLevelCustomURIwCount" prefix="sari" shorten="yes">
    <pattern>{level1}/{level2}/{count}/{term}</pattern>
  </generator>
  <generator name="SimpleLabel">
    <pattern>{label}</pattern>
  </generator>
  <generator name="CompositeLabel">
    <pattern>{label} {text}</pattern>
  </generator>
  <generator name="CompositeVerLabel">
    <pattern>{label} Ver {text}</pattern>
  </generator>
  <generator name="LatLong">
    <pattern>({lat} {long})</pattern>
  </generator>
  <generator name="AddressLabel">
    <pattern>{term},{term2},{term3},{term4}</pattern>
  </generator>
  <generator name="GermanDateTime">
    <custom generatorClass="gr.forth.GermanDate">
      <set-arg name="bound" type="constant"/>
      <set-arg name="text"/>
    </custom>
  </generator>
  <generator name="URIorUUID">
    <custom generatorClass="gr.forth.URIorUUID">
      <set-arg name="text"/>
    </custom>
  </generator>
  <generator name="ConcatMultipleTerms">
    <custom generatorClass="gr.forth.ConcatMultipleTerms">
      <set-arg name="prefix" type="constant"/>
      <set-arg name="sameTermsDelim" type="constant"/>
      <set-arg name="diffTermsDelim" type="constant"/>
      <set-arg name="text1"/>
      <set-arg name="text2"/>
      <set-arg name="text3"/>
      <set-arg name="text4"/>
      <set-arg name="text5"/>
    </custom>
  </generator>
</generator_policy>